@model List<EncarnacionCoop.Entities.ClientInfo>

<link rel="stylesheet" href="css/style.css">

<h1>List Of Client</h1>
<a class="btn btn-primary" href="@Url.Action("Create")">Add User</a>
<a class="btn btn-primary" href="@Url.Action("Index", "UserType")">Add Usertype</a>
<div class="acrylic-container mt-5">
    <div class="acrylic-content">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Occupation</th>
                        <th>User type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
            
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>@client.Id</td>
                                <td>@client.FirstName @client.LastName</td>
                                <td>@client.Address</td>
                                <td>@client.Occupation</td>
                                <td>@client.UserType</td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("View", "Admin", new {id =  client.Id})">
                                        View</a>
                                    <a class="btn btn-warning" href="@Url.Action("Update", "Admin", new {id =  client.Id})">
                                        Update</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", "Admin", new {id =  client.Id})">
                                        Delete</a>

                                </td>
                            </tr>
                        }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>