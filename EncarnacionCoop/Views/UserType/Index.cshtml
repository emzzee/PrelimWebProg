@model List<EncarnacionCoop.Entities.UserType>

<link rel="stylesheet" href="css/style.css">

<h1>User Type</h1>
<a class="btn btn-primary" href="@Url.Action("Create")">Add Usertype</a>
<div class="acrylic-container mt-5">
    <div class="acrylic-content">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>User type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
            
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>@client.Id</td>
                                <td>@client.Name</td>
                                <td>
                                    <a class="btn btn-warning" href="@Url.Action("Update", "UserType", new {id =  client.Id})">
                                        Update</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", "UserType", new {id =  client.Id})">
                                        Delete</a>

                                </td>
                            </tr>
                        }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>